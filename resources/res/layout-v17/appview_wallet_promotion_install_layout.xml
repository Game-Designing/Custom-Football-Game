<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/appc_gradient_translucent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="28dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <ImageView android:id="@+id/wallet_icon" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginRight="13dp" android:src="@drawable/appcoins_wallet_icon" android:layout_marginEnd="13dp"/>
        <TextView android:id="@+id/wallet_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/wallet_icon" android:layout_toEndOf="@+id/wallet_icon" style="@style/Aptoide.TextView.Medium.M.BlackAlpha"/>
        <TextView android:id="@+id/wallet_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_toRightOf="@+id/wallet_icon" android:layout_below="@+id/wallet_title" android:layout_toEndOf="@+id/wallet_icon" style="@style/Aptoide.TextView.Medium.XS.GreyMedium"/>
    </RelativeLayout>
    <LinearLayout android:id="@+id/buttons_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
        <Button android:textColor="@color/grey" android:id="@+id/cancel_button" android:text="@string/wallet_promotion_no_button" android:layout_weight="1" style="@style/Aptoide.Button.Flat"/>
        <Button android:textColor="#ff6600" android:id="@+id/download_button" android:text="@string/wallet_promotion_install_button" android:layout_weight="1" style="@style/Aptoide.Button.Flat"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/wallet_download_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="19dp" android:layout_marginTop="18dp" android:layout_marginRight="8dp" android:layout_weight="1" android:layout_marginStart="19dp" android:layout_marginEnd="8dp">
            <FrameLayout android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginBottom="4dp">
                <ProgressBar android:id="@+id/wallet_download_progress_bar" android:layout_width="match_parent" android:layout_height="4dp" android:indeterminate="false" style="?android:attr/progressBarStyleHorizontal"/>
            </FrameLayout>
            <RelativeLayout android:id="@+id/wallet_download_info_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
                <TextView android:ellipsize="end" android:id="@+id/wallet_download_download_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/appview_short_downloading" android:maxLines="1" style="@style/Aptoide.TextView.Medium.XS.Grey"/>
                <TextView android:layout_gravity="start" android:id="@+id/wallet_download_progress_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" style="@style/Aptoide.TextView.Medium.XS.Grey"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/wallet_install_controls_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_weight="4" android:layout_marginStart="15dp">
            <ImageView android:layout_gravity="center" android:id="@+id/wallet_download_cancel_button" android:padding="12dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_clear_action_black" android:scaleType="center" android:contentDescription="@null"/>
            <ImageView android:layout_gravity="center" android:id="@+id/wallet_download_resume_download" android:padding="12dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_play_arrow_action_black" android:scaleType="fitCenter" android:contentDescription="@null"/>
            <ImageView android:layout_gravity="center" android:id="@+id/wallet_download_pause_download" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_pause_action_black" android:scaleType="fitCenter" android:contentDescription="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:id="@+id/wallet_install_disabled_layout" android:paddingLeft="16dp" android:paddingRight="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:paddingStart="16dp" android:paddingEnd="16dp">
        <Button android:enabled="false" android:id="@+id/wallet_install_disabled_button" android:background="@drawable/card_border_fog_grey_wallet_promotion" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Aptoide.TextView.Medium.S.GreyFog"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:id="@+id/wallet_claim_appc_layout" android:paddingLeft="16dp" android:paddingRight="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:paddingStart="16dp" android:paddingEnd="16dp">
        <Button android:id="@+id/wallet_claim_appc_button" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Aptoide.Button.Install"/>
    </LinearLayout>
</LinearLayout>
