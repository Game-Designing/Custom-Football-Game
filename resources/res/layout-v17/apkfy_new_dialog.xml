<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="Do you want to install:" style="@style/Aptoide.TextView.Regular.M.BlackAlpha"/>
    <RelativeLayout android:background="@drawable/minimal_card_background" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginBottom="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <ImageView android:id="@+id/app_icon" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp" android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="16dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/text_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/app_icon" android:layout_centerVertical="true" android:layout_toEndOf="@+id/app_icon">
            <TextView android:ellipsize="end" android:id="@+id/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:maxLines="1" style="@style/Aptoide.TextView.Medium.M.BlackAlpha"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginRight="5dp" android:src="@drawable/ic_star_black" android:layout_marginEnd="5dp"/>
                <TextView android:id="@+id/app_rating" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Aptoide.TextView.Medium.XXS"/>
            </LinearLayout>
            <TextView android:textColor="@color/bottom_nav_non_selected_item_color" android:id="@+id/app_downloads" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Aptoide.TextView.Regular.XXS"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/appc_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginBottom="12dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true">
            <TextView android:layout_gravity="center_vertical" android:id="@+id/appc_value" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Aptoide.TextView.Medium.XXS.OrangeGradientEnd"/>
            <ImageView android:layout_gravity="center_vertical" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="6dp" android:src="@drawable/ic_appcoins_white_border" android:layout_marginStart="6dp"/>
        </LinearLayout>
    </RelativeLayout>
    <Button android:id="@+id/positive_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginBottom="16dp" android:text="@string/install" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" style="@style/Aptoide.Button"/>
    <Button android:id="@+id/negative_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginBottom="8dp" android:text="@string/cancel" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" style="@style/Aptoide.Button.Flat.GreyMedium"/>
</LinearLayout>
