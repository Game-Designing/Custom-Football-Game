<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rating_layout" android:background="@drawable/layer_2" android:layout_width="113dp" android:layout_height="113dp" android:layout_margin="10dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/users_icon_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_centerHorizontal="true">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/ic_user_shape_white"/>
            <TextView android:textSize="10.6sp" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/users_voted" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        </LinearLayout>
        <TextView android:textSize="42sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/rating_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/users_icon_layout" android:lineSpacingMultiplier="0.9"/>
        <RatingBar android:id="@+id/rating_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:numStars="5" android:stepSize="0.5" android:layout_below="@+id/rating_value" android:layout_centerInParent="true" style="@style/RatingBarSmall"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="11.7dp" android:layout_toRightOf="@+id/rating_layout" android:layout_marginEnd="11.7dp" android:layout_toEndOf="@+id/rating_layout">
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="24dp">
            <TextView android:id="@+id/five_rate_star_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/five_numeric" style="@style/rateAndReviews_starLabel_textView"/>
            <TextView android:id="@+id/five_rate_star_count" android:layout_width="24dp" android:layout_height="wrap_content" style="@style/FragmentRateAndReviewsCount"/>
            <ProgressBar android:id="@+id/five_rate_star_progress" android:layout_width="match_parent" android:layout_height="10dp" android:layout_toLeftOf="@+id/five_rate_star_count" android:layout_toRightOf="@+id/five_rate_star_label" android:layout_toStartOf="@+id/five_rate_star_count" android:layout_toEndOf="@+id/five_rate_star_label" style="@style/RateAndReviews.Custom.ProgressBar"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="24dp">
            <TextView android:id="@+id/four_rate_star_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/four_numeric" style="@style/rateAndReviews_starLabel_textView"/>
            <TextView android:id="@+id/four_rate_star_count" android:layout_width="24dp" android:layout_height="wrap_content" style="@style/FragmentRateAndReviewsCount"/>
            <ProgressBar android:id="@+id/four_rate_star_progress" android:layout_width="match_parent" android:layout_height="10dp" android:layout_toLeftOf="@+id/four_rate_star_count" android:layout_toRightOf="@+id/four_rate_star_label" android:layout_toStartOf="@+id/four_rate_star_count" android:layout_toEndOf="@+id/four_rate_star_label" style="@style/RateAndReviews.Custom.ProgressBar"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="24dp">
            <TextView android:id="@+id/three_rate_star_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/three_numeric" style="@style/rateAndReviews_starLabel_textView"/>
            <TextView android:id="@+id/three_rate_star_count" android:layout_width="24dp" android:layout_height="wrap_content" style="@style/FragmentRateAndReviewsCount"/>
            <ProgressBar android:id="@+id/three_rate_star_progress" android:layout_width="match_parent" android:layout_height="10dp" android:layout_toLeftOf="@+id/three_rate_star_count" android:layout_toRightOf="@+id/three_rate_star_label" android:layout_toStartOf="@+id/three_rate_star_count" android:layout_toEndOf="@+id/three_rate_star_label" style="@style/RateAndReviews.Custom.ProgressBar"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="24dp">
            <TextView android:id="@+id/two_rate_star_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/two_numeric" style="@style/rateAndReviews_starLabel_textView"/>
            <TextView android:id="@+id/two_rate_star_count" android:layout_width="24dp" android:layout_height="wrap_content" style="@style/FragmentRateAndReviewsCount"/>
            <ProgressBar android:id="@+id/two_rate_star_progress" android:layout_width="match_parent" android:layout_height="10dp" android:layout_toLeftOf="@+id/two_rate_star_count" android:layout_toRightOf="@+id/two_rate_star_label" android:layout_toStartOf="@+id/two_rate_star_count" android:layout_toEndOf="@+id/two_rate_star_label" style="@style/RateAndReviews.Custom.ProgressBar"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="24dp">
            <TextView android:id="@+id/one_rate_star_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_numeric" style="@style/rateAndReviews_starLabel_textView"/>
            <TextView android:id="@+id/one_rate_star_count" android:layout_width="24dp" android:layout_height="wrap_content" style="@style/FragmentRateAndReviewsCount"/>
            <ProgressBar android:id="@+id/one_rate_star_progress" android:layout_width="match_parent" android:layout_height="10dp" android:layout_toLeftOf="@+id/one_rate_star_count" android:layout_toRightOf="@+id/one_rate_star_label" android:layout_toStartOf="@+id/one_rate_star_count" android:layout_toEndOf="@+id/one_rate_star_label" style="@style/RateAndReviews.Custom.ProgressBar"/>
        </RelativeLayout>
    </LinearLayout>
    <include android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="4dp" android:layout_below="@+id/rating_layout" layout="@layout/separator_horizontal"/>
</RelativeLayout>
