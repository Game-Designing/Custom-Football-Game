<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:paddingLeft="44dp" android:paddingTop="16dp" android:paddingRight="20dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="120dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="10dp" android:layout_height="12dp" android:src="@drawable/ic_appview_version" android:tint="@color/green_tint_default"/>
            <TextView android:textSize="@dimen/text_size_large" android:textStyle="bold" android:textColor="@color/almost_black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/version_name" android:layout_width="wrap_content" android:layout_height="@dimen/other_version_icon_size_with_icon" android:layout_marginLeft="4dp" android:maxLines="1" android:lines="1" android:fontFamily="@string/font_family_regular"/>
            <ImageView android:id="@+id/badge_icon" android:layout_width="@dimen/other_version_icon_size" android:layout_height="@dimen/other_version_icon_size" android:layout_marginLeft="@dimen/appview_recommended_for_you_image_margin_left" android:src="@drawable/ic_badge_trusted" android:scaleType="centerInside"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/text_size_medium_small" android:textColor="@color/silver_dark" android:gravity="center_vertical" android:id="@+id/version_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:maxLines="1" android:lines="1"/>
        <TextView android:textSize="@dimen/text_size_medium_small" android:textColor="@color/silver_dark" android:gravity="center_vertical" android:id="@+id/downloads" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:lines="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="105dp" android:layout_height="match_parent">
        <ImageView android:id="@+id/store_icon" android:layout_width="match_parent" android:layout_height="44dp" android:src="@drawable/ic_avatar_apps"/>
        <TextView android:textSize="@dimen/text_size_medium" android:textStyle="bold" android:textColor="@color/almost_black" android:ellipsize="end" android:gravity="center" android:id="@+id/store_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:lines="1"/>
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/silver_dark" android:gravity="center" android:id="@+id/store_followers" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:lines="1"/>
    </LinearLayout>
</LinearLayout>
