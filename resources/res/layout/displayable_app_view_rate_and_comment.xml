    <Button android:textSize="@dimen/text_size_small" android:textColor="@color/silver_dark" android:gravity="center" android:id="@+id/rate_this_button2" android:layout_width="match_parent" android:text="@string/appview_rate_this_app" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:textAllCaps="true" android:fontFamily="@string/font_family_medium" style="@style/Aptoide.Button.Ghost.S.Grey"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/rating_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <Button android:textSize="@dimen/text_size_small" android:textColor="@color/silver_dark" android:gravity="center" android:id="@+id/rate_this_button" android:visibility="visible" android:layout_width="127.7dp" android:text="@string/appview_rate_this_app" android:layout_alignParentBottom="true" android:textAllCaps="true" style="@style/Aptoide.Button.Ghost.S.Grey"/>
        <RelativeLayout android:layout_width="113dp" android:layout_height="113dp" android:layout_marginLeft="12dp" android:layout_marginBottom="12dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerVertical="true">
            <LinearLayout android:orientation="horizontal" android:id="@+id/users_icon_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_centerHorizontal="true">
