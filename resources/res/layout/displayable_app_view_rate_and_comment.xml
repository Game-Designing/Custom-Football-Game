        </RelativeLayout>
    </RelativeLayout>
    <include android:id="@+id/separator" android:layout_width="1dp" android:layout_height="73dp" android:layout_marginLeft="10dp" android:layout_marginTop="32dp" android:layout_toRightOf="@+id/rating_layout" layout="@layout/separator_vertical"/>
</RelativeLayout>
