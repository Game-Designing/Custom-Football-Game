        <Button android:textSize="@dimen/text_size_small" android:textColor="@color/silver_dark" android:id="@+id/read_all_button" android:layout_width="match_parent" android:text="@string/appview_button_read_all" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:textAllCaps="true" android:fontFamily="@string/font_family_medium" style="@style/Aptoide.Button.Ghost.S.Grey"/>
        <TextView android:textSize="16sp" android:textColor="@color/grey_900" android:ellipsize="end" android:id="@+id/top_comments_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/top_comments" android:maxLines="2" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
