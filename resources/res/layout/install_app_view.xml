<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:textSize="16sp" android:layout_gravity="center_horizontal" android:id="@+id/appview_install_button" android:visibility="visible" android:layout_width="249dp" android:layout_height="@dimen/install_button_height" android:layout_marginTop="13dp" android:text="@string/install" android:textAllCaps="true" style="@style/Aptoide.Button"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/appview_transfer_info" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="19dp" android:layout_marginTop="18dp" android:layout_marginRight="8dp" android:layout_weight="1">
            <FrameLayout android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginBottom="4dp">
                <ProgressBar android:id="@+id/appview_download_progress_bar" android:layout_width="match_parent" android:layout_height="4dp" android:indeterminate="false" style="?android:attr/progressBarStyleHorizontal"/>
            </FrameLayout>
            <RelativeLayout android:id="@+id/appview_download_info_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
                <TextView android:ellipsize="end" android:id="@+id/appview_download_download_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/appview_short_downloading" android:maxLines="1" style="@style/Aptoide.TextView.Medium.XS.Grey"/>
                <TextView android:layout_gravity="start" android:id="@+id/appview_download_progress_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" style="@style/Aptoide.TextView.Medium.XS.Grey"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/install_controls_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_weight="4" android:layout_toRightOf="@+id/appview_download_progress_number" android:layout_alignParentTop="true">
            <ImageView android:layout_gravity="center" android:id="@+id/appview_download_cancel_button" android:padding="12dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_clear_action_black" android:scaleType="center" android:contentDescription="@null"/>
            <ImageView android:layout_gravity="center" android:id="@+id/appview_download_resume_download" android:padding="12dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_play_arrow_action_black" android:scaleType="fitCenter" android:contentDescription="@null"/>
            <ImageView android:layout_gravity="center" android:id="@+id/appview_download_pause_download" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_pause_action_black" android:scaleType="fitCenter" android:contentDescription="@null"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
